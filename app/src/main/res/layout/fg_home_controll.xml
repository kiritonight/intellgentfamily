<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_white"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="@string/home_controll_type"
        android:textColor="@color/text_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_light"
            android:background="@color/bg_white"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_light_shine"

            android:text="light"
            style="@style/tab_menu_item"/>
        <Button
            android:id="@+id/btn_humidifier"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_hum_on"

            android:text="humidifier"
            style="@style/tab_menu_item"
            />
        <Button
            android:id="@+id/btn_conditioner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_aircon_on"

            android:text="aircondition"
            style="@style/tab_menu_item"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/btn_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_television"
            style="@style/tab_menu_item"

            android:text="television"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            style="@style/tab_menu_item"
            android:drawableTop="@mipmap/ic_null_btn"
            android:clickable="false"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            style="@style/tab_menu_item"
            android:drawableTop="@mipmap/ic_null_btn"
            android:clickable="false"/>
    </LinearLayout>
</LinearLayout>